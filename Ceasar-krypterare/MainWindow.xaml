<Window x:Class="CeasarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CeasarApp" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label>Text att kryptera:</Label>
        <TextBox Name="txbInput"/>

        <Label Margin="1,10,1,1">Nyckel (1–25):</Label>
        <TextBox Name="txbKey"/>

        <Button Margin="1,10,1,1" Click="KlickKryptera">Kryptera</Button>

        <Label Margin="1,10,1,1">Krypterad text:</Label>
        <TextBox Name="txbOutput" IsReadOnly="True"/>
    </StackPanel>
</Window>
