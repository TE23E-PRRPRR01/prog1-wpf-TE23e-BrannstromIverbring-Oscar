<Window x:Class="AritmetikApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AritmetikApp" MinHeight="300" MinWidth="300"
    SizeToContent="WidthAndHeight"
    Background="#DDD">
    <StackPanel Margin="10" Background="#EEE">
        <Label Margin="5,0,5,10" FontSize="24" FontWeight="Bold">Aritmetiken</Label>

        <Label FontSize="16" FontWeight="Bold">Tal 1:</Label>
        <TextBox Name="txbTal1" FontSize="16" Padding="5" Margin="5,0,5,10"></TextBox>

        <Label FontSize="16" FontWeight="Bold">Operator (+, -, *, /):</Label>
        <TextBox Name="txbOperator" FontSize="16" Padding="5" Margin="5,0,5,10"></TextBox>

        <Label FontSize="16" FontWeight="Bold">Tal 2:</Label>
        <TextBox Name="txbTal2" FontSize="16" Padding="5" Margin="5,0,5,10"></TextBox>

        <Button FontSize="16" Padding="5" Margin="5,0,5,10" Click="KlickBeräkna">Beräkna</Button>

        <Label Name="lblResultat" FontSize="16" FontWeight="Bold" Margin="5,0,5,10" Height="50"></Label>
    </StackPanel>
</Window>