<Window x:Class="PortoApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Portoräknare" MinHeight="300" MinWidth="300"
    SizeToContent="WidthAndHeight"
    Background="#DDD">
    <StackPanel Margin="10" Background="#EEE">
        <Label Margin="5,0,5,10" FontSize="24" FontWeight="Bold">Portoräknare</Label>

        <Label FontSize="16" FontWeight="Bold">Vikt (gram):</Label>
        <TextBox Name="txbVikt" FontSize="16" Padding="5" Margin="5,0,5,10"></TextBox>

        <Button FontSize="16" Padding="5" Margin="5,0,5,10" Click="BeraknaPorto_Click">Beräkna porto</Button>

        <Label Name="lblResultat" FontSize="12" FontWeight="Bold" Margin="5,0,5,10" Height="50"></Label>
    </StackPanel>
</Window>
