<Window x:Class="EpostApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpostApp"
        mc:Ignorable="d"
        Title="Epostappen" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="30">Epostappen</Label>
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label Width="120">Ange epost:</Label>
            <TextBox Width="250"></TextBox>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <Label Width="120">Ange meddelande:</Label>
            <TextBox Width="250" Height="250" TextWrapping="Wrap" 
            AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
        </StackPanel>
        <Button click="KlickSkicka" Margin="10" Padding="10">Skicka!</Button>
        <Label Name="lblStatus" Height="20"></Label>
    </StackPanel>
</Window>
